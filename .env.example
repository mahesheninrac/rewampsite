# Application Environment
CI_ENV=development

# Base URL
BASE_URL=http://localhost/rewamp/

# Database Configuration
DB_HOST=localhost
DB_USERNAME=root
DB_PASSWORD=
DB_NAME=rewamp
DB_PORT=3306

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=your_password
SMTP_CRYPTO=tls
FROM_EMAIL=noreply@example.com
FROM_NAME="Rewamp Application"

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_TOKEN_EXPIRE=3600
JWT_REFRESH_TOKEN_EXPIRE=86400

# Session Configuration
SESSION_COOKIE_NAME=rewamp_session
SESSION_EXPIRATION=7200

# Cache Configuration
CACHE_DRIVER=file
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
CSRF_PROTECTION=TRUE
CSRF_TOKEN_NAME=rewamp_csrf_token
CSRF_COOKIE_NAME=rewamp_csrf_cookie
ENCRYPTION_KEY=your_encryption_key_here